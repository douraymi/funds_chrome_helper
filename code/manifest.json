{
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_popup": "html/popup.html",
    "default_icon": {
      "19": "images/icon16.png",
      "38": "images/icon48.png"
      }
  },
  "background": {
    "scripts": ["js/background.js"],
    "default_icon": "/images/icon16.png",
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "https://trade.fund123.cn/home/agreementquery/",
        "http://my.fund123.cn/RealFundDefault.aspx",
        "*://*.fund123.cn/*"
      ],
      "js": [ "/vendor/jquery-2.1.3.min.js", "/vendor/bootstrap/js/bootstrap.min.js", "/vendor/angular-1.0.1.js", "/js/content.js" ],
      "css": [
        "/vendor/bootstrap/css/bootstrap.css",
        "/css/common.css",
        "/css/content.css"
      ]
    }
  ],
  "options_page": "html/options.html",
  "devtools_page": "html/devtools.html",
  "permissions": [
    "activeTab",
    "tabs",
    "alarms",
    "storage",
    "*://*.fund123.cn/*",
    "*://*.eastmoney.com/*",
    "*://*.github.com/*"
  ],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*", "vendor/*", "client/*" ]
}
